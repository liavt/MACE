#define MACE_PROCESSOR_NAME @CMAKE_SYSTEM_PROCESSOR@

/*
=======================================
Libraries
=======================================
*/
#cmakedefine MACE_OPENCV 1

#cmakedefine MACE_X11 1

#cmakedefine MACE_POSIX 1

#cmakedefine MACE_WINAPI 1

